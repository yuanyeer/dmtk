
.rec-content {
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
}
 .rec-content-item {
  width: 200rpx;
  height: 340rpx;
  margin-bottom: 36rpx;
}


.rec-content-item image {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
}

/*标题  */
.title-view {
  margin-top: 16rpx;
  height: 100rpx;
  widows: 100%;
  position: relative;
}
.tag{
  font-size: 18rpx;
  position: absolute;
  top:5rpx;
  left: 0rpx;
  display: inline-block;
  border: 2rpx solid #80B08A;
  color: #80B08A;
  padding: 4rpx 6rpx 4rpx; 
  border-radius: 8rpx;
}
.title {
  font-weight: 500;
  font-size: 30rpx;
  display: inline-block;
  line-height: 44rpx;
  color: #000;
}
.hadTag {
  text-indent: 3.4em;
}

.rec-class-bottom {
  width: 100%;
  height: 56rpx;
  /* background-color: #ffeacc; */
  justify-content: space-between;
  align-items: center;
}
.rec-class-bottom label.price {
  color: orange;
}
.rec-class-bottom label.counts {
  color: gray;
  font-size: 24rpx;
}

.boxsize {
  box-sizing: border-box;
}
.left {
  float: left;
}
.right {
  float: right;
}
.row-view {
  display: flex;
  flex-direction: row;
}
.col-view {
  display: flex;
  flex-direction: column;
}
.text-hidden {
  overflow:hidden;  
  text-overflow:ellipsis;  
  white-space:nowrap;
}