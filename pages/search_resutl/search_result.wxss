/* pages/search_resutl/search_result.wxss */
@import '../../css/global-css/base.wxss';
page {
  background-color: #FAFBFD;
}
.top {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}

/*门店cell  */
.store-cell {
  width: 100%;
  padding: 0rpx 30rpx 0rpx; 
  margin-top: 20rpx; 
}
.store-image {
  border-radius: 20rpx;
}
.store-info {
  width: 57%;
  margin-left: 20rpx;
  justify-content: center;
  align-items:flex-start;
  display: flex;
}
.store-title {
  font-size: 28rpx;
  font-weight: 700;
}
.store-detail {
  margin: 15rpx 0rpx;
}
.store-detail .location {
  font-size: 24rpx;
}
.store-detail .distance {
  font-size: 24rpx;
}
.store-tag-item {
  margin-right: 10rpx;
  border-radius: 20rpx;
  padding: 5rpx 10rpx 5rpx;
}
.tag {
  font-size: 18rpx;
  font-weight: 400;
  border-radius: 8rpx;
  padding: 3rpx 5rpx 3rpx;
}
.subTitle {
  font-size: 24rpx;
}
.location {
  justify-content: space-around;
  align-items: center;
}
.location .location-icon {
  width: 16rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.location label {
   margin-left: 8rpx;
  margin-right: 10rpx;
  width: 80%;
  font-size: 22rpx;
  color: #999999;
  display: -webkit-box;
  line-height: 32rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}
.dis {
  font-size: 22rpx;
  display: flex;
  justify-content: flex-end;
}