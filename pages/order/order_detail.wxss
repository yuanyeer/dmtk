/* pages/courses/course_detail.wxss */
@import '../../css/global-css/base.wxss';
page {
  background-color:#F0F0F0; 
}
/*top  */
.top {
  position: relative;
}
.float-share {
  width: 66rpx;
  height: 66rpx;
  background:rgba(0, 0, 0, 0.5);
  position: absolute;
  right: 30rpx;
  top:20rpx;
  z-index: 1000;
  border-radius: 33rpx;
}
.float-share image {
  width: 27rpx;
  height: 27rpx;
}
/*课程信息  */
.course-info-view {
  justify-content: space-between;
  padding: 40rpx 30rpx 0;
  position: relative;
  height: 220rpx;
  background-color: #fff;
}

.title-view {
  font-size: 32rpx;
  width: 60%;
  font-weight: 700;
}

.tag {
  width: 84rpx;
  height: 30rpx;
  font-size: 18rpx;
  display: inline-block;
  text-align: center;
  line-height: 30rpx;
  border-radius: 8rpx;
}

/*课时  */
.shadow {
  position: absolute;
  right: 0rpx;
  top: 32rpx;
  width: 152rpx;
  height: 141rpx;
  z-index: 1;
}
.course-time {
  height: 80rpx;
  width: 80rpx;
  color: white;
  border-radius: 8rpx;
  padding: 8rpx;
  z-index: 999;
  position: absolute;
  right: 30rpx;
  top: 40rpx;
   /* box-shadow: 0rpx 15rpx 20rpx 8rpx #f0f0f0;  */
}
.course-time label {
  padding:0;
  margin:0;
  border:0;
}

.count {
  font-size: 44rpx;
}

.title {
  margin-top: 8rpx;
  font-size: 20rpx;
}
.price {
  font-size: 28rpx;
}
.price-view {
  position: absolute;
  bottom: 26rpx;
  left: 26rpx;
}

.price-view .pre-price {
  font-size: 20rpx;
  color: #999999;
  margin-left: 5rpx;
}
/*进度  */
.progress {
  width: 100%;
  /* height: 214rpx; */
  background-color: white;
  margin-top: 20rpx;
  overflow: hidden;
  padding: 0rpx 30rpx 0rpx;
  position: relative;
}
.progress .title {
  width: 100%;
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 20rpx;
  position: relative;
}
.progress-number {
  /* background-color: #abc; */
  position: absolute;
  left:30rpx;
  top: 83rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: flex-end;
  color: #666666;
}
.progress-title {
  position: absolute;
  left:30rpx;
  width: 214rpx;
  bottom: 30rpx;
  /* background-color: #abc; */
  font-size: 22rpx;
  display: flex;
  justify-content: flex-end;
  color: #666666;
}
.more-record {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 24rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.more-record image {
  margin-left: 10rpx;
  width: 8rpx;
  height: 16rpx;
}
.progress-view {
  height: 40rpx;
  /* background:-webkit-linear-gradient(left,#7239FB,#5AEFC5); */
  margin-top: 60rpx;
  border-radius: 20rpx;
  padding: 5rpx;
  background-color: #F0F0F0;
  justify-content: flex-start;
  align-items: center;
  display: flex;
  margin-bottom: 74rpx;
  overflow: hidden;
}
.progress-view image {
  height: 100%;
  border-radius: 15rpx;
}

/*课程介绍  */
.course-introduce {
  width: 100%;
  height: 1000rpx;
  background-color: white;
  margin-top: 20rpx;
  padding: 0 30rpx 0;
  overflow: hidden;
}
.course-introduce .title {
  width: 100%;
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 20rpx;
  position: relative;
}

/*购买栏目  */

.bot-bar {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  align-items: center;
  justify-content: center;
  display: flex;
  vertical-align: baseline;
}
.bot-bar label {
  color: white;
  font-size: 32rpx;
}
.bot-bar image {
  margin-top: 2rpx;
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
 
}