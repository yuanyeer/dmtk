
.boxsize {
  box-sizing: border-box;
}
.left {
  float: left;
}
label view text {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-family: 'Avenir', Helvetica, Arial, sans-serif;
}
.right {
  float: right;
}
.row-view {
  display: flex;
  flex-direction: row;
}
.col-view {
  display: flex;
  flex-direction: column;
}
.text-hidden {
  overflow:hidden;  
  text-overflow:ellipsis;  
  white-space:nowrap;
}
.tac {
  justify-content: center;
  align-items: center;
  display: flex;
}
::-webkit-scrollbar {  
  width: 0;  
  height: 0;  
  color: transparent;  
}  

