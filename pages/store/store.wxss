@import '../../css/global-css/base.wxss';
page {
  background-color: #F0F0F0;
}
.store-top-cell {
  background-color: #fff;
  height: 100rpx;
  width: 100%;
  border-top: 2rpx solid #F0F0F0;
  align-items: center;
  padding-left: 30rpx;
  font-size: 30rpx;
  position: relative;
}
.store-top-cell image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.arrow {
  float: right;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -15rpx;
}

/*使用门店tabBar  */

.tabBar {
  margin-top: 20rpx;
  height: 100rpx;
  border-bottom: 2rpx solid lightgray;
  justify-content: center;
  display: flex;
  align-items: center;
  background-color: white;
}
.tabBar>view {
  width: 50%;
  height: 100%;
  font-size: 32rpx;
  position: relative;
}
.line {
  position: absolute;
  bottom: 0rpx;
  width: 35rpx;
  height: 8rpx;
  background-color: #69BE7A;
  border-radius: 4rpx;
  left: 50%;
  margin-left: -17.5rpx;
}
.tabBar-selected {
  color: #69BE7A;
}

/*内容  */
.content {
  background-color: #fff;
  overflow: hidden;
}

/*门店详情  */
.store-detail {
  padding: 0rpx 30rpx 0;
}
.subTitle {
  font-size: 32rpx;
  font-weight: 700;
}
/*门店图片  */
.store-images {
  margin-top: 20rpx;
}
.store-image-item {
  width: 260rpx;
  height: 200rpx;
  margin-right: 30rpx;
  border-radius: 20rpx;
}
/*老师  */
.teacher-container {
  margin-top: 20rpx;
}
.teacher-cell {
  width: 260rpx;
  margin-right: 30rpx;
  display:inline-block;
  
  overflow: hidden;
}
.teacher-cell image {
  border-radius: 20rpx;
  width: 260rpx;
  height: 350rpx;
}
.tea-type {
  font-size: 30rpx;
}
.tea-name {
  font-size: 28rpx;
}
.tag {
  font-size: 18rpx;
  padding: 4rpx 6rpx 4rpx;
  border-radius: 8rpx;
  display: inline-block;
}

/*地图  */
.map-view {
  margin-top: 100rpx;
  margin-bottom: 100rpx;
  display: block;
}