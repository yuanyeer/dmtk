@import '../../css/global-css/base.wxss';
page {
  background-color: #FAFBFD;
}
.top {
  background-color: #fff;
  width: 100%;
  height: 44px;
  border-top: 1px solid gainsboro;
  border-bottom: 1px solid gainsboro;
}
.top-item {
  width: 50%;
  height: 100%;
  color: #ccc;
  font-size: 15px;
  justify-content: center;
  align-items: center;
}
.use {
  color: #5DB96F;
}

.order-item {
  padding-left: 15px;
  padding-right: 15px;
  width: 100%;
  height: 160px;
  margin-bottom: 2px;
  background-color: #fff;
}
.order-top {
  width: 100%;
  height: 38px;
  padding-left: 20px;
  font-size: 14px;
  justify-content: center;
  color: #ccc;
}

.order-content image {
  width: 50%;
  height: 100px;
  border-radius: 8px;
}
.order-detail {
  width: 50%;
  height: 100px;
  padding: 5px 8px 5px;
  font-size: 11px;
}
.order-title {
  font-size: 14px;
}
.order-next {
  margin-top: 10px;
  color: orange;
}
.order-complete {
  margin-top: 5px;
  color: #ccc;
}