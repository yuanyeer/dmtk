/* pages/courses/course_detail.wxss */
@import '../../css/global-css/base.wxss';
.course-info-view {
  height: 280rpx;
  background-color: #fff;
  border-bottom: 2rpx solid gray;
}
.course-info-view {
  justify-content: space-between;
  padding: 26rpx 26rpx 0;
}
.title-view {
  font-size: 30rpx;
  width: 60%;
}
.course-price {
  align-items: flex-end;
}
.course-price label {
  font-size: 30rpx;
}

/*使用门店tabBar  */
.course-tabBar {
  height: 100rpx;
  border-bottom: 2rpx solid gray;
}
.course-tabBar view{
  width: 50%;
  height: 100%;
  font-size: 34rpx;
}
.tabBar-selected {
  font-weight: 700;
}

/*购买栏目  */
.bot-bar {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left:0;
  align-items: center;
}
.bot-bar label{
  font-size: 30rpx;
  margin-left: 30rpx;
}
.bot-bar button {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 50%;
  height: 100%;
  outline: none;
  border: 0rpx;
  border-radius: 0rpx;
  background-color: orange;
  color: white;
}