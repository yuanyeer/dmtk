@import '../../css/global-css/base.wxss';

page {
  background-color: #F0F0F0;
  flex-direction: column;
  display: flex;
}
.top {
  height: 300rpx;
}
.user-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #cca;
  border-radius: 50%;
}
.top label{
  font-size: 28rpx;
  color: #fff;
  margin-top: 10rpx;
}


/*VIP  */
.ad {
  height: 160rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  align-items: center;
  display: flex;
  position: relative;
}
.ad image {
  width: 50rpx;
  height: 49rpx;
  margin-left: 30rpx;
}
.ad .vip-arrow {
  position: absolute;
  right: 30rpx;
  width: 12rpx;
  height: 22rpx;
}
.vip-info {
  margin-left: 20rpx;
}
.vip-info label {
  color: #333333;
}
.vip-info .title {
  font-size: 28rpx;
}
.vip-info .sub-title {
  margin-top: 10rpx;
  font-size: 22rpx;
}

/*右上角  */
.notification {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.notification image {
  width: 100%;
  height: 100%;
}
/*右上角消息  */
.notification .bot {
  background-color: #F85E44;
  font-size: 18rpx;
  position: absolute;
  right: -10rpx;
  top: -20rpx;
  border-radius: 20rpx;
  padding: 3rpx 6rpx 3rpx;
}