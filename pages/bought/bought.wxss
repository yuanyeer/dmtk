@import '../../css/global-css/base.wxss';
.cell {
  /* background-color: #abc; */
  padding: 24rpx;
  position: relative;
}
.cell-top {
  width: 100%;
  height: 220rpx;
}
.cell image {
  width: 48%;
  height: 100%;
  border-radius: 20rpx;
}
.content {
  margin-left: 20rpx;
  width: 50%;
  height: 100%;
}
.content .title {
  font-size: 28rpx; 
  font-weight: 700;
  border: solid 2rpx gray;
  width:360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content .sub-title {
  margin-top: 20rpx;
  font-size: 24rpx; 
  color: lightgray;
}
.cell-bot {
  /* background-color: #cfc; */
  margin-top: 10rpx;
}
.date {
  display: inline-block;
  background-color: #cee;
  font-size: 17rpx;
  padding: 13rpx 10rpx 13rpx;
  border-radius: 30rpx;
}