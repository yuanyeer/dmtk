/* pages/login/bind.wxss */
@import '../../css/global-css/base.wxss';
/*顶部  */
.top-view {
  margin-top: 50rpx;
  margin-bottom: 72rpx;
}
.logo {
  height: 200rpx;
  width: 200rpx;
}


/*手机号码部分  */
.input-view {
  align-items: center;
  justify-content: center;
}
.area {
  background-color: #F0F0F0;
  font-size: 28rpx;
  width: 74rpx;
  height: 50rpx;
}
.send-btn {
  color: #fff;
  font-size: 20rpx;
  width: 90rpx;
  height: 50rpx;
  border-radius: 10rpx;
}
.phone-input {
  /* width: 40%; */
  width: 260rpx;
  height: 80rpx;
  margin: 0rpx 20rpx;
  font-size: 32rpx;
  border: 0rpx;
  border-bottom: 2rpx solid #333333;
  /* background-color: #abc; */
  text-align: center;
}
/*验证码  */
.verify {
  width: 100%;
  margin-top: 50rpx;
  justify-content: center;
}
.verify-input  {
  width: 60rpx;
  height: 50rpx;
  margin: 0rpx 15rpx;
  font-size: 36rpx;
  border: 0rpx;
  border-bottom: 2rpx solid #333333;
  text-align: center;
  color: #333333;
}
.tip {
  display: flex;
  justify-content: center;
  font-size: 20rpx;
  margin-top: 15rpx;
}
.hidden-input {
  background-color: #abc;
  opacity: 0;
  outline: none;
  color:#fff;
  margin-left: -99999rpx;
}
/*底部按钮  */
.confirm-btn {
  position: fixed;
  bottom: 0rpx;
  left: 0px;
  width: 100%;
  height: 100rpx;
  color: white;
  outline: none;
  border-radius: 0rpx;
  font-size: 32rpx;
}
.enable-btn {
  background-color: lightgray;
  border: 0rpx;
}