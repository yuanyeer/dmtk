/* pages/courses/course_detail.wxss */
@import '../../css/global-css/base.wxss';
page {
  background-color:#F0F0F0; 
}
/*top  */

/*课程信息  */
.course-info-view {
  justify-content: space-between;
  padding: 40rpx 30rpx 0;
  position: relative;
  height: 220rpx;
  background-color: #fff;
}

.title-view {
  font-size: 32rpx;
  width: 60%;
  font-weight: 700;
}

.tag {
  /* width: 84rpx;
  height: 30rpx; */
  font-size: 18rpx;
  display: inline-block;
  text-align: center;
  line-height: 30rpx;
  border-radius: 8rpx;
  padding: 1rpx 6rpx 1rpx;
}

/*课时  */
.shadow {
  position: absolute;
  right: 0rpx;
  top: 32rpx;
  width: 152rpx;
  height: 141rpx;
  z-index: 1;
}
.course-time {
  height: 80rpx;
  width: 80rpx;
  color: white;
  border-radius: 8rpx;
  padding: 8rpx;
  z-index: 999;
  position: absolute;
  right: 30rpx;
  top: 40rpx;
   /* box-shadow: 0rpx 15rpx 20rpx 8rpx #f0f0f0;  */
}
.course-time label {
  padding:0;
  margin:0;
  border:0;
}

.count {
  font-size: 44rpx;
}

.title {
  margin-top: 8rpx;
  font-size: 20rpx;
}
.price {
  font-size: 28rpx;
}
.price-view {
  position: absolute;
  bottom: 26rpx;
  left: 26rpx;
}

.price-view .pre-price {
  font-size: 20rpx;
  color: #999999;
  margin-left: 5rpx;
}
/*使用门店tabBar  */

.course-tabBar {
  margin-top: 20rpx;
  height: 90rpx;
  border-bottom: 2rpx solid lightgray;
  justify-content: center;
  display: flex;
  align-items: center;
  background-color: white;
}
.course-tabBar>view {
  width: 50%;
  height: 100%;
  font-size: 28rpx;
  position: relative;
  color: #666666;
}
.line {
  position: absolute;
  bottom: 0rpx;
  width: 30rpx;
  height: 8rpx;
  background-color: #69BE7A;
  border-radius: 4rpx;
  left: 50%;
  margin-left: -17.5rpx;
}

.course-tabBar .tabBar-selected {
  color: #69BE7A;
  font-size: 30rpx;
}
/*内容  */
.table-list {
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 100rpx;
}
/*课程介绍  */
.course-introduce {
  width: 100%;
  height: 1000rpx;
  background-color: white;
}
/*门店cell  */
.store-container {
  margin-top: 20rpx;
}
.store-cell {
  width: 100%;
  padding: 0rpx 30rpx 0rpx; 
  margin-bottom: 40rpx;
}
.store-image {
  border-radius: 20rpx;
}
.store-info {
  margin-left: 20rpx;
  width: 59%;
  /* align-items: center; */
   justify-content: center; 
  display: flex;
}
.store-title {
  font-size: 28rpx;
}
.store-detail {
  /* background-color: #abc; */
  margin: 20rpx 0rpx 20rpx;
}
.store-detail image {
  width: 20rpx;
  height: 25rpx;
}
.store-detail .location {
  margin-left: 8rpx;
  margin-right: 10rpx;
  width: 80%;
  font-size: 22rpx;
  color: lightgray;
  display: -webkit-box;
  line-height: 32rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}
.store-detail .distance {
  font-size: 22rpx;
}
.store-tag-item {
  font-size: 20rpx;
  margin-right: 15rpx;
  border-radius: 20rpx;
  padding: 5rpx 10rpx 5rpx;
}

/*购买栏目  */

.bot-bar {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  align-items: center;
  background-color: white;
  opacity: 0.9;
  justify-content: space-between;
}
.col-btn {
  width: 50%;
  height: 100%;
  font-size: 32rpx;
}
.col-btn image{
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}
.buy-btn {
  width: 50%;
  height: 100%;
  outline: none;
  border: 0rpx;
  border-radius: 0rpx;
  color: white;
  font-size: 32rpx;
}
 .buy-btn image {
  margin-right: 10rpx;
  width: 29rpx;
  height: 32rpx;
}
