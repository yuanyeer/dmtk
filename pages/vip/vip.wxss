@import '../../css/global-css/base.wxss';

/*顶部  */
.top {
  height: 180rpx;
  border-bottom: 2rpx solid gray;
  align-items: center;
  display: flex;
}
.user-icon {
  width: 120rpx;
  height: 120rpx;
  /* background-color: #cca; */
  border: 2rpx solid #ccc;
  border-radius: 50%;
  margin-left: 40rpx;
}

/*内容  */
.text-view {
  font-size: 28rpx;
  margin-left: 20rpx;
}
.mid-view {
  margin-top: 30rpx;
  padding: 0px 30rpx 0px;
}
.mid-img {
  width: 100%;
  height: 500rpx;
  border-radius: 20rpx;
}
.price-view {
  margin-top: 30rpx;
  font-size: 30rpx;
  font-weight: 700;
  position: relative;
}
.dis {
  font-size: 18rpx;
  background-color: #F0F0F0;
  display: inline-block;
  padding:8rpx 20rpx 8rpx;
  border-radius: 20rpx;
  position: absolute;
  top: -20rpx;
  left: 200rpx;
}
.detail .title{
  margin-top: 40rpx;
  font-weight: 700;
}
.detail text {
  font-size: 28rpx;
}

/*底部支付  */

.bot-pay {
  height: 100rpx;
  border-top: 2rpx solid gray;
  background-color: #fff;
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  display: flex;
  align-items: center;
}
.pay-btn {
  width: 50%;
  height: 100%;
  background-color: orange;
  outline: none;
  color: white;
  position: absolute;
  right: 0px;
  bottom: 0px;
  border-radius: 0rpx;
  font-size: 30rpx;
}
.bot-pay label{
  margin-left: 30rpx;
  font-size: 26rpx;
}