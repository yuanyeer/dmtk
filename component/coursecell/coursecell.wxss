
.rec-content {
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
}
 .rec-content-item {
  width: 200rpx;
  height: 340rpx;
  margin-bottom: 36rpx;
}


.rec-content-item image {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
}

.rec-content-item label {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #050505;
}  

.rec-class-bottom {
  width: 100%;
  height: 56rpx;
  /* background-color: #ffeacc; */
  justify-content: space-between;
}
.rec-class-bottom label.price {
  color: orange;
}
.rec-class-bottom label.counts {
  color: #ccc;
  font-size: 24rpx;
}

.boxsize {
  box-sizing: border-box;
}
.left {
  float: left;
}
.right {
  float: right;
}
.row-view {
  display: flex;
  flex-direction: row;
}
.col-view {
  display: flex;
  flex-direction: column;
}
.text-hidden {
  overflow:hidden;  
  text-overflow:ellipsis;  
  white-space:nowrap;
}