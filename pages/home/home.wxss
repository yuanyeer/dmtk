@import '../../css/global-css/base.wxss';

page {
  background-color: #F0F0F0;
}
.scan-view {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 50px;
  height: 50px;
  background-color: yellow;
  z-index: 2;
}
.location-view {
  position: absolute;
  top: 10px;
  left: 10px;
  width: 50px;
  height: 50px;
  background-color:khaki;
  z-index: 2;
}
.scroll-item {
    width: 100%;
      height: 250px;
        display: inline-block;
}
.scroll-item {
  width: 100%;
  height: 250px;
  display: inline-block;
}
.top {
  width:100%;
  background-color:#cdc;
}
.fun {
  height: 80px;
  width:100%;
  background-color:#fdf;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid gainsboro;
}
.fun-item {
  width: 80px;
  height: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.fun-item label {
  font-size: 13px;
}
.fun-item-icon {
  width: 50px;
  height: 50px;
  background-color: #caf;
}


/*推荐  */
.recommend {
  width:100%;
  background-color: #fff;
}
.rec-top {
  width: 100%;
  height: 50px;
  position:relative;
}
.rec-top .rec-top-item {
  width: 100px;
  height: 100%;
}
.rec-top-item.left {
  justify-content:flex-start;
  align-items: center;
  display: flex;
  font-weight: 700;
}
.rec-top-item.right {
  justify-content: flex-end;
  align-items: center;
  display: flex;
  color: #ccc;
  font-size: 14px;
}
.rec-loadmore {
  width: 100%;
  height: 40px;
  border-top: 1px solid gainsboro;
  justify-content: center;
  align-items: center;
  color: green;
  font-size: 14px;
}


/*热门课程  */
.hot {
  background-color: #fff;
  width:100%;
  margin-top: 10px;
  border-bottom: 1px solid #ccc;
}
.hot-content image {
  height: 175px;
  border-radius: 5px;
}
.hot-label-view {
  margin-top: 8px;
  justify-content: space-between;
}
.hot-title {
  font-size: 15px;
  width: 80%;
}
.hot-price {
  font-size: 16px;
  color:orange;
}
.hot-bottom label{
  font-size: 14px;
  color: gray;
}