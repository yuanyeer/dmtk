
.rec-content {
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
}
 .rec-content-item {
  width: 100px;
  height: 170px;
  margin-bottom: 18px;
}


.rec-content-item image {
  width: 100%;
  height: 100px;
  border-radius: 10px;
}

.rec-content-item label {
  margin-top: 4px;
  font-size: 14px;
  color: #050505;
}  

.rec-class-bottom {
  width: 100%;
  height: 28px;
  /* background-color: #ffeacc; */
  justify-content: space-between;
}
.rec-class-bottom label.price {
  color: orange;
}
.rec-class-bottom label.counts {
  color: #ccc;
  font-size: 12px;
}

.boxsize {
  box-sizing: border-box;
}
.left {
  float: left;
}
.right {
  float: right;
}
.row-view {
  display: flex;
  flex-direction: row;
}
.col-view {
  display: flex;
  flex-direction: column;
}
.text-hidden {
  overflow:hidden;  
  text-overflow:ellipsis;  
  white-space:nowrap;
}